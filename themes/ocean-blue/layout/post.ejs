<article class="post">
  <header class="post-header">
    <h1 class="post-title"><%- page.title %></h1>
    <div class="post-meta">
      <time class="post-date"><%- date(page.date, theme.article.date_format) %></time>
      <% if (theme.article.show_categories && page.categories && page.categories.length) { %>
        <span class="post-category">
          <% page.categories.each(function(cat) { %>
            <a href="<%- url_for(cat.path) %>"><%- cat.name %></a>
          <% }) %>
        </span>
      <% } %>
      <% if (page.author) { %>
        <span class="post-author">by <%- page.author %></span>
      <% } %>
    </div>
  </header>

  <div class="post-content">
    <%- page.content %>
  </div>

  <% if (theme.article.show_tags && page.tags && page.tags.length) { %>
    <div class="post-tags">
      <% page.tags.each(function(tag) { %>
        <a href="<%- url_for(tag.path) %>" class="tag">#<%- tag.name %></a>
      <% }) %>
    </div>
  <% } %>

  <nav class="post-nav">
    <% if (page.prev) { %>
      <a href="<%- url_for(page.prev.path) %>" class="prev-post">
        <span class="nav-label">← 上一篇</span>
        <span class="nav-title"><%- page.prev.title %></span>
      </a>
    <% } %>
    <% if (page.next) { %>
      <a href="<%- url_for(page.next.path) %>" class="next-post">
        <span class="nav-label">下一篇 →</span>
        <span class="nav-title"><%- page.next.title %></span>
      </a>
    <% } %>
  </nav>
</article>

<% if (theme.comments.enable) { %>
  <section class="comments">
    <%- partial('_partial/comments') %>
  </section>
<% } %>